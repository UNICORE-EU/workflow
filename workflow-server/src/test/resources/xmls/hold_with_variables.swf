<s:Workflow xmlns:s="http://www.chemomentum.org/workflow/simple"
          xmlns:jsdl="http://schemas.ggf.org/jsdl/2005/11/jsdl"
          xmlns:jsdl1="http://schemas.ggf.org/jsdl/2005/11/jsdl-posix">
  <s:Documentation>
    <s:Comment>
    Simple chain: 'date1' - hold - 'date2'
    with additional variable declarations
    </s:Comment>
  </s:Documentation>
  
   <s:DeclareVariable>
    <s:Name>COUNTER</s:Name>
    <s:Type>INTEGER</s:Type>
    <s:InitialValue>123</s:InitialValue>
  </s:DeclareVariable>
  
   <s:DeclareVariable>
    <s:Name>SECOND_COUNTER</s:Name>
    <s:Type>INTEGER</s:Type>
    <s:InitialValue>456</s:InitialValue>
  </s:DeclareVariable>
  
  <s:Activity Id="date1" Name="JSDL">
   <s:JSDL>
      <jsdl:JobDescription>
        <jsdl:Application>
          <jsdl:ApplicationName>Date</jsdl:ApplicationName>
        </jsdl:Application>
      </jsdl:JobDescription>
    </s:JSDL>
  </s:Activity>
   
  <s:Activity Id="hold" Name="HOLD"/>
   
  <s:Activity Id="date2" Name="JSDL">
    <s:JSDL>
       <jsdl:JobDescription>
        <jsdl:Application>
          <jsdl:ApplicationName>Date</jsdl:ApplicationName>
        </jsdl:Application>
      </jsdl:JobDescription>
    </s:JSDL>
  </s:Activity>

  <s:Transition Id="date1-hold" From="date1" To="hold"/>
  <s:Transition Id="hold-date2" From="hold" To="date2"/>

</s:Workflow>
