#!/bin/sh
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	# Config files
	chown unicore:unicore /etc/unicore/workflow/
	chmod 755 /etc/unicore/workflow/

	chown unicore:unicore /etc/unicore/workflow/xacml2Policies
	chmod 755 /etc/unicore/workflow/xacml2Policies

	chown unicore:unicore /etc/unicore/workflow/startup.properties
	chmod 644 /etc/unicore/workflow/startup.properties

	chown unicore:unicore /etc/unicore/workflow/logging.properties
	chmod 644 /etc/unicore/workflow/logging.properties

	chown unicore:unicore /etc/unicore/workflow/simpleuudb
	chmod 644 /etc/unicore/workflow/simpleuudb

	chown unicore:unicore /etc/unicore/workflow/container.properties
	chmod 600 /etc/unicore/workflow/container.properties
	
	chown unicore:unicore /etc/unicore/workflow/xacml2.config
	chmod 644 /etc/unicore/workflow/xacml2.config
	
	chown unicore:unicore /etc/unicore/workflow/xacml2Policies/*.xml
	chmod 600 /etc/unicore/workflow/xacml2Policies/*.xml

	chown unicore:unicore /etc/init.d/unicore-workflow
	chmod 744 /etc/init.d/unicore-workflow
	
	chown unicore:unicore /usr/sbin/unicore-workflow-start.sh
	chmod 744 /usr/sbin/unicore-workflow-start.sh
	
	chown unicore:unicore /usr/sbin/unicore-workflow-stop.sh
	chmod 744 /usr/sbin/unicore-workflow-stop.sh
	
	chown unicore:unicore /usr/sbin/unicore-workflow-status.sh
	chmod 744 /usr/sbin/unicore-workflow-status.sh
	
	# Documentation
	chmod 755 /usr/share/doc/unicore/workflow/
	chmod 644 /usr/share/doc/unicore/workflow/*
	
	# jar files
	chmod 755 /usr/share/unicore/workflow/lib
	chmod 644 /usr/share/unicore/workflow/lib/*.jar

	# logs
	chown unicore:unicore /var/log/unicore
	chmod 755 /var/log/unicore
	

	chown unicore:unicore /var/log/unicore/workflow
	chmod 755 /var/log/unicore/workflow
	
	chown unicore:unicore /var/run/unicore
	chmod 755 /var/run/unicore
	
	chown unicore:unicore /var/lib/unicore
	chmod 750 /var/lib/unicore
	chown unicore:unicore /var/lib/unicore/workflow
	chmod 750 /var/lib/unicore/workflow
	chown unicore:unicore /var/lib/unicore/workflow/data
	chmod 750 /var/lib/unicore/workflow/data


        if [ -e /sbin/insserv ]  
        then
          /sbin/insserv unicore-workflow
        fi	
	
	;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
